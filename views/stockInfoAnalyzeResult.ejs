function _f_isDuringOpeningtime()
{
    let today = moment().format('YYYY-MM-DD');
    let sart_time = today +' 09:00';
    let end_time = today +' 13:35';
    return moment().isBetween(sart_time, end_time);
}

function btn_pricechart_info(item)
{  
