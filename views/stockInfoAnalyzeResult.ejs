                if (a.result_StockInfo.GSP > b.result_StockInfo.GSP)
                  return -1;
                
                return 0;
            }          

            stock_info_list.sort(compare);
            
            /* Clean HTML content */
            $('#stock_info_tbl_body').empty();
            gStockIdList = [];            
            gStockIdIndexDict = {};
